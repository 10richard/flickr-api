<h1>Enter ID of a user to display photos from their feed</h1>

<%= form_with method: :get do |f| %>
    <%= f.label :user_id, 'UserID' %>
    <%= f.text_field :user_id %>

    <%= f.submit 'Search for Photos'%>
<% end %>

<%= flash[:error] if flash[:error] %>

<% unless @photos.nil? %>
    <% @photos.each do |p| %>
        <%= link_to(image_tag(Flickr.url_q(p)), Flickr.url_photopage(p)) %>
    <% end %>
<% end %>